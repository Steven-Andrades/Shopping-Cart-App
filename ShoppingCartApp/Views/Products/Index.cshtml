@using ShoppingCartApp.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-color-2 text-center fw-bold">Products Available</h1>

<!--Product Carousel-->
<div id="productCarousel" class="carousel slide mb-3" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @{
            int totalSlides = (int)Math.Ceiling((double)Model.Count() / 4);
            for (int item = 0; item < totalSlides; item++)
            {
                <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="@item" 
                class="@(item == 0 ? "active" : "")" aria-current="true" aria-label="Slide @(item + 1)"></button>
            }
        }
    </div>

    <div class="carousel-inner rounded p-3 background-color-1">
        @{
            var products = Model.ToList();
            for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
            {
                <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                        <div class="row justify-content-around g-3">
                            @for (int productIndex = 0; productIndex < 3; productIndex++)
                            {
                                int actualIndex = (slideIndex * 3) + productIndex;
                                if (actualIndex < products.Count)
                                {
                                    var product = products[actualIndex];
                                    <div class="col-3">
                                        <div class="card h-100 background-color-1 border-color-3">
                                            <div class="card-header-custom py-2 text-center">                                
                                                <h5 class="text-color-0 mb-0 fw-bold text-truncate">@product.ProductName</h5>
                                            </div>

                                            <div class="card-body d-flex align-items-center justify-content-center p-2">
                                                <img src="/images/product.png"
                                                     class="img-fluid rounded"
                                                     style="max-height: 100px; object-fit: contain; width: 100%"
                                                     onerror="this.src='/images/product.png'" />
                                            </div>

										    <div class="card-footer bg-transparent border-0">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h5 class="text-color-2 mb-0">@product.Price.ToString("C")</h5>
                                                <a class="add-item-button btn background-color-2 text-color-2 w-75 btn-sm" value="@product.Id">Add To Cart</a>
                                                </div>
										    </div>
									    </div>
                                    </div>
                                }
                            }
                        </div>
                </div>  
            }
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!--Product Cards-->
<div class="container">
    <div class="row justify-content-around">
        @foreach (var item in Model)
        {
            <div class="card m-1 p-2 text-center col-3 background-color-1 border-color-3 flex-column">
                <div class="card-header-custom py-2">
                    <h3 class="text-color-0 mb-0 fw-bold">
						@Html.DisplayFor(modelItem => item.ProductName)
						<small class="d-block fs-5 fw-normal mt-1">@Html.DisplayFor(modelItem => item.Unit)</small>
					</h3>
                </div>
                <p class="text-color-0 flex-grow-1" >
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                <h2 class="text-color-2">
                    @item.Price.ToString("C")
                </h2>

                <!--Placeholder image-->
                <div class="my-3">
                    <img src="/images/product.png"
                         class="img-fluid rounded"
                         style="max-height: 150px; object-fit: cover;"
						 onerror="this.src='/images/product.png'" />
                </div>
                <div class="mt-auto">
                    <a class="add-item-button align-self-end btn background-color-2 text-color-2 w-100" value="@item.Id">Add To Cart</a>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/products.js" asp-append-version="true" ></script>