@using ShoppingCartApp.Models.DTOs
@model CreateUserDTO

@{
    ViewData["Title"] = "Create";
    string errorMessage = ViewBag.CreateUserError ?? "";
}

<h1 class="text-color-2 fw-bold">Create Account</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createUserForm" asp-action="Create">
            @{
                if (string.IsNullOrWhiteSpace(errorMessage) == false)
                {
                    <label class="text-danger">@errorMessage</label>
                }
            }

            <label id="userFormMessage" class="text-danger"></label>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label fs-3 mb-2 text-color-2"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label fs-3 mb-2 text-color-2"></label>
                <input id="createUserPassword" asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirmation" class="control-label fs-3 mb-2 text-color-2">Password Confirmation</label>
                <input id="createUserConfirmation" asp-for="PasswordConfirmation" class="form-control" type="password" />
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <div class="row align-items-end">
                    <div class="col-6">
					    <input type="submit" value="Create" class="btn background-color-2 text-color-2 w-75" />
                    </div>

                    <div class="col-6">
                        <div class="d-flex flex-column h-100">
                            <div class="text-center mb-2">
                                <h5 class="text-color-2 mb-1">Already have an account?</h5>
                                <h5 class="text-color-2 fw-bold">Log On!</h5>
                            </div>
                            <div class="text-center">
								<a asp-action="Login" class="btn background-color-2 text-color-2 w-75 mt-auto">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <div class="text-center">
            <img src="/images/logo.svg"
                 alt="Company Logo"
                 class="animate-logo"
                 style="max-height: 400px;" />
        </div>
    </div> 
</div>

<script src="~/js/authentication.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

