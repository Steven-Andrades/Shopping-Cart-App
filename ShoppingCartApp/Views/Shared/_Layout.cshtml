<!DOCTYPE html>
<html lang="en">
@{
    //Get the users login status form the session data and store it. 
    string Authenticated = Context.Session.GetString("Authenticated") ?? "false";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingCartApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!--Add css style sheet-->
	<link id="themeStyle" rel="stylesheet" href="/css/primary-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingCartApp.styles.css" asp-append-version="true" />
</head>
<body class="background-color-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm background-color-1 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <a class="navbar-brand me-4 text-color-2" asp-area="" asp-controller="Home" asp-action="Index">
                        <div class="text-center">
                            <img src="/images/logo.svg"
                                 style="max-height: 60px;" />
                        </div>
                    </a>
                    <ul class="navbar-nav">
                        <li class="nav-item mx-3 border-bottom border-color-2 text-color-2 rounded px-3">
                            <a class="nav-link text-color-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-3 border-bottom border-color-2 text-color-2 rounded px-3">
                            <a class="nav-link text-color-2" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        @{
                            if (Authenticated.Equals("true"))
                            {
                                <li class="nav-item mx-3 border-bottom border-color-2 text-color-2 rounded px-3">
                                    <a class="nav-link text-color-2" asp-area="" asp-controller="ShoppingCart" asp-action="CartHistory">Purchase History</a>
                                </li>

                            }
                        }
                        <li class="nav-item dropdown mx-3 border-bottom border-color-2 rounded px-3">
                            <a class="nav-link dropdown-toggle text-color-2" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Logins</a>
                            <ul class="dropdown-menu background-color-1" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-color-2" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a></li>
                                <li><a class="dropdown-item text-color-2" asp-area="" asp-controller="Authentication" asp-action="Create">Create</a></li>
                                </ul>
                        </li>
                        <li class="nav-item mx-3 border-bottom border-color-2 rounded px-3">
                            <a class="nav-link text-color-2" asp-area="" asp-controller="AboutUs" asp-action="Index">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="float-end col-2">
                <!--Button to use for swapping colour theme-->
				<input id="btnTheme" type="button" class="btn background-color-2 text-color-2 me-5" value="Theme"/>
                @{
                    if (Authenticated.Equals("true"))
                    {
                        <a class="btn background-color-2 mx-1 text-color-2" asp-action="Logoff" asp-controller="Authentication">Logoff</a>
                       
                    }
                    else
                    {
                        <a class="btn background-color-2 mx-1 text-color-2" asp-action="Login" asp-controller="Authentication">Login</a>
                        <a class="btn background-color-2 mx-1 text-color-2" asp-action="Create" asp-controller="Authentication">Create</a>
                    }
                }
            </div>
        </nav>
    </header>

    @{
        if (Authenticated.Equals("true"))
        {
            <div class="d-flex justify-content-end me-5">
                <a class="btn background-color-2 text-color-2" id="btnCart">Cart</a>
            </div>
		}
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="offcanvas offcanvas-end background-color-1" id="shoppingCart">
        <div id="shoppingCartBody" class="offcanvas-body">
            <!--When we add our shopping cart partial it will go here-->
        </div>
    </div>

    <footer class="border-top footer background-color-1 text-color-2">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/shoppingcart.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
